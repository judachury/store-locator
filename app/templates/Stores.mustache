{{#stores}}
<div class="panel panel-default wow fadeInDown {{#show}}active{{/show}}" data-wow-duration=".5s" data-wow-delay="0s" data-wow-offset="100">
	<a class="accordion_store_location {{#show}}tab-open{{/show}}" data-lat="{{lat}}" data-lng="{{lng}}" data-id="{{id}}" data-name="{{name}}" data-address1="{{address1}}" data-address2="{{address2}}" data-town="{{town}}" data-county="{{county}}" data-enddate="{{enddate}}" data-postcode="{{postcode}}" data-zoom="15" data-toggle="collapse" data-parent="#accordion" data-target-scroll="" data-marker="https://www.walkerssupersofastores.com/assets/img/WalkersMarker.png" href="#collapse{{id}}">
		<div class="panel-heading">
			<h4 class="panel-title">
				<span class="date">Super Sofa Date: {{date}} <br> Winner Projection Date: 7pm, {{enddate}} </span>
				<span class="distance pull-right">{{#distance}}<i class="material-icons">location_on</i> {{distance}} MILES {{/distance}}</span>
			</h4>
		</div>
	</a>
	<div id="collapse{{id}}" class="panel-collapse collapse {{#show}}in{{/show}}">
		<div class="panel-body">
			<div class="address">
				<span class="address">
					<span class="bold">{{name}}</span> <br>
					{{address1}}<br>
					{{#address2}}{{address2}}, {{/address2}}{{town}} <br>
					{{county}}, {{postcode}}
				</span>
				{{#directions}}
				<div class="location">
					<a href="#" type="button" class="bold btn btn-custom-blue waves-effect btn-sm modal-trigger" data-toggle="modal" data-target="#modal1" data-template="#destination-form">Get Directions</a>
				</div>
				{{/directions}}
				{{#from}}
				<form action="https://maps.google.com/maps" method="get" class="location" target="_blank">
					<input type="hidden" name="saddr" value="{{from}}" />
					<input type="hidden" name="daddr" value="{{name}} {{address1}} {{town}} {{postcode}} United Kingdom" />
					<button type="submit" class="btn btn-custom-blue waves-effect btn-sm bold">Get Directions</button>
					<!--href="#modal1"--> 
				</form>
				{{/from}}
			</div><!-- /address -->
		</div>
	</div>
</div>
{{/stores}}